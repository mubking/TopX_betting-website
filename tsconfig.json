{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,              // Allows importing JavaScript files
    "checkJs": false,             // Skips type-checking on JavaScript files
    "skipLibCheck": true,         // Skips type-checking of declaration files
    "strict": false,              // Relax strict mode for easier JS/TS interop
    "noEmit": true,               // Prevents emitting compiled files
    "incremental": true,          // Speeds up subsequent builds
    "module": "esnext",           // Use modern ES module system
    "esModuleInterop": true,      // Enables ES module interop
    "moduleResolution": "node",   // Allows Node.js-style module resolution
    "resolveJsonModule": true,    // Allows importing JSON files
    "isolatedModules": true,      // Ensures compatibility with single-file transpilation
    "jsx": "preserve",            // Preserves JSX in output
    "plugins": [
      {
        "name": "next"            // Next.js plugin for better integration
      }
    ]
  },
  "include": [
  "next-env.d.ts",  // Next.js environment file
  ".next/types/**/*.ts", // Types generated by Next.js
  "**/*.ts", // TypeScript files
  "**/*.tsx" // TypeScript React files
],  "exclude": ["node_modules"]

 
}
